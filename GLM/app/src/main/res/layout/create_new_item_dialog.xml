<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="200dp"
    app:layout_constrainedHeight="false">

    <EditText
        android:id="@+id/create_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:ems="10"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:paddingStart="5sp"
        android:paddingEnd="5sp"
        app:layout_constraintBottom_toTopOf="@+id/create_item_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825" />

    <EditText
        android:id="@+id/create_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Item Type"
        android:inputType="textPersonName"
        android:paddingStart="5sp"
        android:paddingEnd="5sp"
        app:layout_constraintBottom_toTopOf="@+id/cancel_item_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_item_name" />

    <Button
        android:id="@+id/cancel_item_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:background="#FFC400"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_item_type"
        app:layout_goneMarginBottom="20dp" />

    <Button
        android:id="@+id/create_new_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="#FFC400"
        android:text="Create"
        app:layout_constraintStart_toEndOf="@+id/cancel_item_create"
        app:layout_constraintTop_toBottomOf="@+id/create_item_type"
        app:layout_goneMarginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>